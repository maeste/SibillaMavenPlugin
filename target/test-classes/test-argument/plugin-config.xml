<project>
  <build>
    <plugins>
      <plugin>
        <groupId>it.javalinux.sibilla.plugins</groupId>
        <artifactId>maven-sibilla-plugin</artifactId>
        <configuration>
          <targetDirectory>target-dir</targetDirectory>
          <outputDirectory>output-dir</outputDirectory>
          <testOutputDirectory>test-output-dir</testOutputDirectory>
          <verbose>true</verbose>
          <staleMillis>100</staleMillis>
          <runnerClass>it.javalinux.sibilla.runner.impl.MyTestRunner</runnerClass>
          <sourceRoots>
            <sourceRoot>source1</sourceRoot>
            <sourceRoot>source2</sourceRoot>
          </sourceRoots>
          <classpathElements>
            <classpathElement>cpEl1</classpathElement>
            <classpathElement>cpEl2</classpathElement>
          </classpathElements>
          <testSourceRoots>
            <testSourceRoot>testSource1</testSourceRoot>
            <testSourceRoot>testSource2</testSourceRoot>
          </testSourceRoots>
          <testClasspathElements>
            <testClasspathElement>testCpEl1</testClasspathElement>
            <testClasspathElement>testCpEl2</testClasspathElement>
          </testClasspathElements>
          <includes>
            <include>include1</include>
            <include>include2</include>
          </includes>
          <excludes>
            <exclude>exclude1</exclude>
            <exclude>exclude2</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
